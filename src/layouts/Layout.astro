---
import '../styles/global.css';
import ScrollProgress from '../components/react/ScrollProgress';
import Background3D from '../components/react/Background3D';
import ThemeSwitcher from '../components/react/ThemeSwitcher';
import { ThemeProvider } from '../context/ThemeContext';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="ServiceNow Development Hub - Neal Borowiak" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <!-- ServiceNow Polaris Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  </head>
  <body class="bg-polaris-bg dark:bg-polaris-bg-dark text-polaris-text dark:text-polaris-text-dark transition-colors duration-200">
    <ThemeProvider client:load>
      <ScrollProgress client:load />
      <Background3D client:load />
      <slot />
      <ThemeSwitcher client:load />
    </ThemeProvider>
  </body>
</html>

<style is:global>
  :root {
    /* ServiceNow Polaris Color Palette */
    --polaris-primary: #2E8B57;
    --polaris-secondary: #81B5A1;
    --polaris-accent: #293E40;
    --polaris-bg: #F6F7F9;
    --polaris-text: #2C3E50;
    --polaris-border: #E2E8F0;
    --polaris-hover: #F1F5F9;
  }

  html.dark {
    --polaris-primary: #3DA76D;
    --polaris-secondary: #A4C9B9;
    --polaris-accent: #3A5154;
    --polaris-bg: #1A1A1A;
    --polaris-text: #E1E1E1;
    --polaris-border: #333333;
    --polaris-hover: #2A2A2A;
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  body {
    font-family: 'Inter', system-ui, sans-serif;
    min-height: 100vh;
  }

  /* Modern scrollbar */
  ::-webkit-scrollbar {
    width: 8px;
  }

  ::-webkit-scrollbar-track {
    background: var(--polaris-bg);
  }

  ::-webkit-scrollbar-thumb {
    background: var(--polaris-border);
    border-radius: 4px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: var(--polaris-accent);
  }
</style>
