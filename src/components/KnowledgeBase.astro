---
const categories = [
  {
    title: "ServiceNow Development",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
    </svg>`,
    topics: ["Script Includes", "Business Rules", "Client Scripts", "UI Policies"]
  },
  {
    title: "Integration & APIs",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7v8a2 2 0 002 2h6M8 7V5a2 2 0 012-2h4.586a1 1 0 01.707.293l4.414 4.414a1 1 0 01.293.707V15a2 2 0 01-2 2h-2M8 7H6a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2v-2" />
    </svg>`,
    topics: ["REST APIs", "Integration Hub", "Authentication", "Middleware"]
  }
];
---

<section id="knowledge-base" class="py-16 bg-gradient-to-b from-polaris-bg to-white">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold text-polaris-accent mb-4">Knowledge Base</h2>
      <p class="text-polaris-text/80 max-w-2xl mx-auto">
        Explore curated ServiceNow development resources and best practices
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-8">
      {categories.map(category => (
        <div class="bg-white rounded-xl shadow-lg p-6">
          <div class="flex items-center gap-4 mb-6">
            <div class="text-polaris-primary">
              <Fragment set:html={category.icon} />
            </div>
            <h3 class="text-xl font-semibold text-polaris-accent">
              {category.title}
            </h3>
          </div>
          <ul class="space-y-3">
            {category.topics.map(topic => (
              <li class="flex items-center gap-2">
                <svg class="w-4 h-4 text-polaris-primary" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                </svg>
                <span class="text-polaris-text/80">{topic}</span>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</section> 