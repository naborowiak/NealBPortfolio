---
import { Image } from "astro:assets";
import svgl from "../../public/svgl.png";
import stockin from "../../public/stockin.png";

interface Project {
  title: string;
  image: ImageMetadata;
  link: string;
  preview: string;
  status: string;
}

const featuredProjects = [
  {
    title: "Healthcare Integration Suite",
    description: "Custom ServiceNow application integrating with Epic and Cerner systems, streamlining healthcare workflows and improving patient care coordination.",
    tech: ["ServiceNow", "IntegrationHub", "REST API", "Healthcare Systems"],
    link: "#"
  },
  {
    title: "Automated Testing Framework",
    description: "Comprehensive ATF suite that reduced testing time by 75% and improved release quality through automated test case execution.",
    tech: ["ServiceNow ATF", "JavaScript", "Test Automation"],
    link: "#"
  },
  {
    title: "Custom Service Portal",
    description: "Modern, responsive service portal with enhanced user experience and custom widgets for healthcare-specific workflows.",
    tech: ["Service Portal", "AngularJS", "Bootstrap", "CSS3"],
    link: "#"
  },
  {
    title: "Workflow Automation",
    description: "Automated critical healthcare processes reducing manual intervention and improving efficiency by 60%.",
    tech: ["Flow Designer", "IntegrationHub", "Process Automation"],
    link: "#"
  }
];
---

<section id="projects" class="w-full py-12 border-t border-[#ffffff10]">
  <div class="max-w-5xl mx-auto">
    <h2 class="text-lg text-[var(--sec)] mb-2 shiny-sec">Featured Work</h2>
    <h3 class="text-4xl md:text-5xl font-medium text-[var(--white)] mb-12">Projects</h3>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {
        featuredProjects.map((project) => (
          <article class="bg-[#1414149c] p-6 rounded-lg border border-[var(--white-icon-tr)] group hover:border-[var(--sec)] transition-colors">
            <h3 class="text-[var(--white)] text-xl font-medium mb-2">{project.title}</h3>
            <p class="text-[var(--white-icon)] mb-4">{project.description}</p>
            <div class="flex flex-wrap gap-2">
              {project.tech.map((tech) => (
                <span class="px-3 py-1 text-sm bg-[#ffffff10] text-[var(--white-icon)] rounded-full">
                  {tech}
                </span>
              ))}
            </div>
          </article>
        ))
      }
    </div>
  </div>
</section>