---
import { Image } from "astro:assets";
import svgl from "../../public/svgl.png";
import stockin from "../../public/stockin.png";

interface Project {
  title: string;
  image: ImageMetadata;
  link: string;
  preview: string;
  status: string;
}

const projects: Project[] = [
  {
    title: "StockIn",
    image: stockin as ImageMetadata,
    link: "https://github.com/gothsec/stockin-demo",
    preview: "https://stockin-demo.vercel.app",
    status: "In Development",
  },
  {
    title: "Svgl.app",
    image: svgl as ImageMetadata,
    link: "https://github.com/pheralb/svgl",
    preview: "https://svgl.app",
    status: "Contributor",
  },
];
---

<section id="projects" class="py-16 bg-white">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold text-polaris-accent mb-4">Featured Projects</h2>
      <p class="text-polaris-text/80 max-w-2xl mx-auto">
        Explore my ServiceNow implementations and custom solutions
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map(project => (
        <div class="bg-white rounded-xl shadow-lg overflow-hidden transition-transform hover:-translate-y-1">
          <div class="aspect-video bg-polaris-bg">
            {project.image && (
              <img 
                src={project.image} 
                alt={project.title}
                class="w-full h-full object-cover"
              />
            )}
          </div>
          <div class="p-6">
            <h3 class="text-xl font-semibold text-polaris-accent mb-2">
              {project.title}
            </h3>
            <p class="text-polaris-text/80 mb-4">
              {project.status}
            </p>
            <div class="flex flex-wrap gap-2">
              <a 
                target="_blank" 
                href={project.link} 
                aria-label="GitHub" 
                class="px-3 py-1 bg-polaris-secondary/10 text-polaris-primary rounded-full text-sm hover:bg-opacity-90 transition"
              >
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-7">
                  <path d="M24 12L18.3431 17.6569L16.9289 16.2426L21.1716 12L16.9289 7.75736L18.3431 6.34315L24 12ZM2.82843 12L7.07107 16.2426L5.65685 17.6569L0 12L5.65685 6.34315L7.07107 7.75736L2.82843 12ZM9.78845 21H7.66009L14.2116 3H16.3399L9.78845 21Z"></path>
                </svg>
              </a>
              <a 
                target="_blank" 
                href={project.preview} 
                aria-label="Preview" 
                class="px-3 py-1 bg-polaris-secondary/10 text-polaris-primary rounded-full text-sm hover:bg-opacity-90 transition"
              >
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-7">
                  <path d="M16.0037 9.41421L7.39712 18.0208L5.98291 16.6066L14.5895 8H7.00373V6H18.0037V17H16.0037V9.41421Z"></path>
                </svg>
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>

    <div class="text-center mt-12">
      <a 
        href="#contact"
        class="inline-flex items-center gap-2 bg-polaris-primary text-white px-6 py-3 rounded-lg font-medium hover:bg-opacity-90 transition"
      >
        <span>Discuss Your Project</span>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
  </div>
</section>