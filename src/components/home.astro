---
import LetterGlitch from "../React/LetterGlitch.tsx";
import LogoWall from "../components/logoWall.astro";
import SkillsList from "../React/SkillsList.tsx";
import { Image } from "astro:assets";
---

<section class="min-h-screen flex items-center justify-center flex-col gap-6 py-32">
  <div class="flex flex-col items-center gap-4">
    <h1 class="text-4xl md:text-6xl font-bold text-[var(--white)] text-center">
      Neal Borowiak
      <span class="block text-[var(--sec)]">ServiceNow Developer</span>
    </h1>
    <p class="text-[var(--white-icon)] text-center max-w-2xl text-lg">
      Senior ServiceNow Developer at Cerner/Oracle, specializing in healthcare IT solutions, 
      system integrations, and custom application development.
    </p>
  </div>

  <div class="flex gap-4">
    <a
      href="#projects"
      class="px-6 py-2 bg-[var(--white-icon-tr)] text-[var(--white)] rounded-lg opacity-60 transition-opacity border border-[var(--white-icon-tr)] hover:opacity-100"
    >
      View Projects
    </a>
    <a
      href="#contact"
      class="px-6 py-2 bg-[var(--white-icon-tr)] text-[var(--white)] rounded-lg opacity-60 transition-opacity border border-[var(--white-icon-tr)] hover:opacity-100"
    >
      Contact Me
    </a>
  </div>
</section>

<style is:global>
.shiny-sec {
    background: linear-gradient(
        135deg,
        #A476FF 25%,
        #eee5ff 50%,
        #A476FF 75%
    );
    background-size: 400% 100%;
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    animation: shine 3s linear infinite;
}

@keyframes shine {
    0% {
        background-position: 100% 50%;
    }
    30%, 70% {
        background-position: 0% 50%;
    }
}
</style>